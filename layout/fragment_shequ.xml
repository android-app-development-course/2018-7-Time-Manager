<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/a"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="分析"
            android:textColor="#000000"
            android:background="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_height="50dp" />
        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/bing"
                android:layout_height="100dp" />
            <TextView
                android:text="饼状图分析数据"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bingtu"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:background="#aefa8686"
                android:textColor="#FFFF"
                android:layout_height="50dp"
                android:text="开始" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/zhu"
                android:layout_height="100dp" />
            <TextView
                android:text="柱状图分析数据"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/zhutu"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:background="#aefa8686"
                android:textColor="#FFFF"
                android:layout_height="50dp"
                android:text="开始" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_height="100dp">
            <ImageView
                android:src="@drawable/zhexian"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:text="折线图分析数据"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/xiantu"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:background="#aefa8686"
                android:textColor="#FFFF"
                android:layout_height="50dp"
                android:text="开始" />
        </LinearLayout>

        </LinearLayout>

</FrameLayout>
